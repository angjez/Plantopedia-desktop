# horizontal box layout
<AddPlantHorizontal, DeleteMultipleCombined, EditPlantHorizontal>:
    orientation: "horizontal"
    spacing: 8
    padding: [16, 16, 16, 16]

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

# vertical box layout
<MainBoxes, AddPlantCombinedLayout, DeleteMultipleBoxes, EditPlantCombined, CombineAllBoxes>:
    orientation: "vertical"
    spacing: 8
    padding: [16, 16, 16, 16]

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

# vertical box layout for widgets
<InputLabels, InputFields, DeleteMultipleCheckboxes, DeleteMultipleLabels, EditInput>:
    orientation: "vertical"
    spacing: 8

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<PlantButtons, PlantImages>:
    orientation: "vertical"
    spacing: 20

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

# menu box layout
<Menu>:
    size_hint: (1.0, 0.05)
    orientation: "horizontal"
    padding: [8, 0, 8, 0]
    spacing: 8

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size